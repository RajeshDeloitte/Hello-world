<aura:component access="GLOBAL" extends="c:custCommGenericComponent" controller="ZuoraInvoiceUtility">
	<aura:attribute name="fieldNames" type="String[]" description="Fields which map to columns" access="GLOBAL" />
    <aura:attribute name="record" type="Object" description="A single record which is represented by this row" access="GLOBAL" />
    <aura:attribute name="invoiceIdField" type="String" description="The name of the field which stores invoice id" access="GLOBAL" />
                    
    <aura:attribute name="formattedRecord" type="String[]" description="Formatted record" access="PRIVATE" />
    
    <aura:handler name="init" value="{! this }" action="{! c.init }" />
    
    <tr class="slds-hint-parent">
        <aura:iteration items="{! v.formattedRecord }" var="val" indexVar="index">
            <aura:if isTrue="{! index == 0 }">
                <td class="slds-truncate" data-label="Account Name"><a onclick="{! c.getInvoice }">{! val }</a></td>
                <aura:set attribute="else">
                    <td class="slds-truncate" data-label="Account Name">{! val }</td>
                </aura:set>
            </aura:if>
        </aura:iteration>
    </tr>
</aura:component>